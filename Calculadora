<script src="main.js"></script>

JAVASCRIPT:

function soma(params) {
    var x
    var y

    x = document.getElementById("num1").value;
    x = parseFloat(x);
    y = document.getElementById("num2").value;
    y = parseFloat(y);

    document.getElementById("resp").innerHTML = x + y
}

function subtrair(params) {
    var x
    var y

    x = document.getElementById("num1").value;
    x = parseFloat(x)
    y = document.getElementById("num2").value;
    y = parseFloat(y)

    document.getElementById("resp").innerHTML = x - y
}

function multi(params) {
    var x
    var y

    x = document.getElementById("num1").value;
    x = parseFloat(x)
    y = document.getElementById("num2").value;
    y = parseFloat(y)

    document.getElementById("resp").innerHTML = x * y
}

function div(params) {
    var x
    var y

    x = document.getElementById("num1").value;
    x = parseFloat(x)
    y = document.getElementById("num2").value;
    y = parseFloat(y)

    document.getElementById("resp").innerHTML = x / y
}


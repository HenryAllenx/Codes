<body>
    <center>
    <h1>Calculadora</h1>
    <hr>
    <b>Primeiro número: </b>
    <input type="number" id="num1">
    <br>
    <b>Segundo número: </b>
    <input type="number" id="num2">
    <br>
    <button onclick="soma()">Somar</button> 
    <br>
    <button onclick="subtrair()">Subtrair</button>
    <br>
    <button onclick="multi()">Multiplicar</button>
    <br>
    <button onclick="div()">Dividir</button>
    <br>
    Resultado = 
    <br>
    <div id="resp"></div>
    </center>
    


</body>
